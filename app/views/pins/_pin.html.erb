<div class="box">
		<h4> <%= pin.title %> </h4> 
			<% if pin.image.file? %>
			<%= image_tag pin.image(:medium) %>
			<% end %>
			<p><%= pin.body %></p>
			<p>
				<strong>
				Posted by Brother <%= link_to pin.user.last_name, pin.user %>
				</strong>
			<p>
		<% if current_user == pin.user %>
			<%= link_to 'Edit', edit_pin_path(pin) %>
			<%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></p>
	<% end %>
</div>