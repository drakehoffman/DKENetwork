<div class="box">
	<h4> <%= pin.title %> </h4> 
<p><%= pin.body %></p>
<p>
	<strong>
		Posted by <%= link_to pin.user.name, pin.user %>
	</strong>
<p>
<% if current_user == pin.user %>
	<%= link_to 'Edit', edit_pin_path(pin) %>
	<%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>
</div>